<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.manager? %>
    <%= f.hidden_field :manager_id, value: current_user.manager.id %>
  <% elsif current_user.editor? %>
    <%= f.hidden_field :manager_id, value: current_user.manager.id %>
    <%= f.hidden_field :editor_id, value: current_user.editor.id %>
  <% end %>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <br/>

  <div class="form-group">
    <%= f.label :active %><br>
    <%= f.check_box :active, class: "form-control" %>
  </div>

  <br />

  <fieldset>
    <legend>Permiss√µes</legend>

    <% f.object.permissions.in_groups_of(2, false) do |group| %>
      <div class="row">
        <% group.each do |permission| %>
          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <% if current_user.admin? %>
              <%= f.fields_for :permissions, permission do |p| %>
                <%= render 'permission', f: p %>
              <% end %>
            <% else %>
              <%= f.collection_check_boxes :permissions, current_user.profile.permissions, :id, :role %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </fieldset>

  <div class="actions">
    <%= button_tag(type: 'submit', class:"btn btn-sm btn-success", data: { disable_with: "Aguardando..." }) do %>
      <i class="fa fa-save"></i>
      <strong>Salvar</strong>
    <% end %>

    <%= link_to(@profile, class: "btn btn-sm btn-primary") do %>
      <i class="fa fa-eye"></i>
      <span>Mostrar</span>
    <% end if policy(@profile).show? %>

    <%= link_to(profiles_path, class: "btn btn-sm btn-default") do %>
      <i class="fa fa-exchange"></i>
      <span>Voltar</span>
    <% end if policy(@profile).index? %>
  </div>
<% end %>

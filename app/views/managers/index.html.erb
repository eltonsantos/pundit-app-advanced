<p id="notice"><%= notice %></p>

<h1>Listing Managers</h1>

<table border="1">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.description %></td>
        <% if policy(manager).show? %>
          <td><%= link_to 'Show', manager %></td>
        <% end %>
        <% if policy(manager).show? %>
          <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <% end %>
        <% if policy(manager).show? %>
          <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Manager', new_manager_path if policy(Manager).create? %>

<p id="notice"><%= notice %></p>

<h1>Listing Editors</h1>

<table border="1">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editors.each do |editor| %>
      <tr>
        <td><%= editor.description %></td>
        <% if policy(editor).show? %>
          <td><%= link_to 'Show', editor %></td>
        <% end %>
        <% if policy(editor).edit? %>
          <td><%= link_to 'Edit', edit_editor_path(editor) %></td>
        <% end %>
        <% if policy(editor).destroy? %>
          <td><%= link_to 'Destroy', editor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Editor', new_editor_path if policy(Editor).create? %>

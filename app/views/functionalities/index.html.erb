<p id="notice"><%= notice %></p>

<h1>Listing Functionalities</h1>

<table border="1">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functionalities.each do |functionality| %>
      <tr>
        <td><%= functionality.description %></td>
        <% if policy(functionality).show? %>
          <td><%= link_to 'Show', functionality %></td>
        <% end %>
        <% if policy(functionality).edit? %>
          <td><%= link_to 'Edit', edit_functionality_path(functionality) %></td>
        <% end %>
        <% if policy(functionality).destroy? %>
          <td><%= link_to 'Destroy', functionality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Functionality', new_functionality_path if policy(Functionality).create? %>

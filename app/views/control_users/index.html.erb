<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin?</th>
      <th>Manager?</th>
      <th>Editor?</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin.present? ? "Yes" : "No" %></td>
        <td><%= user.manager_id.present? ? "Yes" : "No" %></td>
        <td><%= user.editor_id.present? ? "Yes" : "No" %></td>
        <td><%= user.active.present? ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', control_user_path(user) %></td>
        <td><%= link_to 'Destroy', control_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_control_user_path %>